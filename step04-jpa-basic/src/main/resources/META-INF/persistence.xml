<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
   version="3.0">
   <persistence-unit name="">
      <properties>
            <!-- JDBC Info -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/?serverTimezone=Asia/Seoul"/>
            <property name="jakarta.persistence.jdbc.user" value=""/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/> <!-- MySQL 방언 사용 -->

            <!-- 추가 옵션 -->
            <property name="hibernate.show_sql" value="true"/> 			<!-- 쿼리문 출력 -->
            <property name="hibernate.format_sql" value="true"/> 		<!-- 쿼리문 포맷팅 -->
            <property name="hibernate.use_sql_comments" value="true"/> 	<!-- 쿼리문 정보 주석 출력 -->
            <property name="hibernate.hbm2ddl.auto" value="none" /> 	<!-- DDL 사용 -->
      </properties>
   </persistence-unit>
</persistence>